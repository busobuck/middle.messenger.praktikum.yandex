{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["**/*.html"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": [2, "single"],
    "max-len": [1, 140],
    "complexity": [1, 15],
    "no-var": [2],
    "no-empty": [2],
    "semi": [2, "never"],
    "no-extra-semi": [2],
    "@typescript-eslint/explicit-module-boundary-types": [2]
  }
}
